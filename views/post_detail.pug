extends layout.pug

block content
  main.all_posts  
    h2.post_title= post.title
      if !post.archive
        a.archive-link(href=`/posts/${ post.id }/archive`) Archive post
    p.post-body#body= post.body 
    
    
    script(type="text/javascript").
      window.onload = function () {
        document.getElementById('body').innerHTML = marked(document.getElementById('body').innerHTML);
      }